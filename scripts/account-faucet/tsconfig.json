{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node"],
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
  },
  "exclude": ["**/node_modules", "**/dist"]
}

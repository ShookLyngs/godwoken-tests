{
  "name": "contracts",
  "version": "1.1.1",
  "description": "Some contract test case for Godwoken",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test --network gw_devnet_v1",
    "test:gw_testnet_v1": "hardhat test --bail --network gw_testnet_v1",
    "test:gw_alphanet_v1": "hardhat test test/Token --bail --network gw_alphanet_v1",
    "test:testnet_token": "hardhat test test/Token --bail --network gw_testnet_v1 --grep \"Transactions loop\"",
    "test:devnet_token": "hardhat test test/Token --bail --network gw_devnet_v1 --grep \"Transactions loop\""
  },
  "keywords": [
    "Solidity",
    "Hardhat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.5.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.9.1",
    "web3": "^1.7.1"
  }
}
